@model CMS.Models.tblCases

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h1>@ViewData["caseno"]</h1>
<h4>tblCases</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CaseCatgoryid" class="control-label"></label>
                <select asp-for="CaseCatgoryid" class ="form-control" asp-items="ViewBag.CaseCatgoryid" ></select>
            </div>
            <div class="form-group">
               
                <input asp-for="CaseNo" value=@ViewData["caseno"] class="form-control" type="text" />
                <span asp-validation-for="CaseNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option selected="selected" value="0">--Select Nature--</option>
                    <option value="1">Civil</option>
                    <option value="2">Criminal</option>
                    <option value="3">Other</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="courtid" class="control-label"></label>
                <select asp-for="courtid" class ="form-control" asp-items="ViewBag.courtid"></select>
            </div>
            <div class="form-group">
                
                <input asp-for="oppositeName" class="form-control" placeholder="Opposite Name" />
                <span asp-validation-for="oppositeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateInstitution" class="control-label"></label>
                <input asp-for="dateInstitution" class="form-control" />
                <span asp-validation-for="dateInstitution" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="File" class="form-control" placeholder="File No" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

